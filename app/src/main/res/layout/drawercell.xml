<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_wid"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relIcone"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:id="@+id/txtDrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="Large Text"
                android:textColor="@color/DEFAULT_COLOR"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:tint="@color/DEFAULT_COLOR" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLine"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:layout_below="@+id/relIcone"
            android:background="@color/DEFAULT_COLOR"></RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
